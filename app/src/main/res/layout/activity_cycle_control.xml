<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".a_kotlingrammar.c_cyclecontrol.CycleControlActivity">
    <Button
            android:id="@+id/for_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="常见的for循环"
            android:gravity="center"/>

    <Button
            android:id="@+id/return_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="循环中的返回和跳转"
            android:gravity="center"/>
    <Button
            android:id="@+id/while_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="while循环控制"
            android:gravity="center"/>
</LinearLayout>